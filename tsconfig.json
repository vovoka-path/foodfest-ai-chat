{
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node16",
    "target": "esnext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true, // Используется в основном для бандлеров/Vite, но не мешает
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": { // <-- Рекомендуется для чистых импортов
      "@src/*": ["src/*"],
      "@knowledge/*": ["src/knowledge/*"],
      "@documents/*": ["src/documents/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
    // 'allowImportingTsExtensions' и 'noEmit' здесь НЕТ.
  }
}
